<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Crowdfunder</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/heroic-features.css" rel="stylesheet">

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
      <% end %>

      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
          <div class="container">
              <!-- Brand and toggle get grouped for better mobile display -->
             <div class="navbar-header">
                <a class="navbar-brand" href="/">Home</a>
            </div>
             <div class="collapse navbar-collapse" >
                <ul class="nav navbar-nav">
                  <% if current_user %>
                  <li>
                  <%= link_to "New Project", new_user_project_path(current_user.id)%>
                  </li>
                  <li>
                  <%= link_to "Log Out", session_path("current"), :method => :delete, class: "logout"%>
                  </li>
                  <% else %>
                  <li>
                    <%= link_to "Log In", new_session_path, class: "login"%>
                  </li>
                  <li>
                    <%= link_to "Sign Up", new_user_path, class:"signup" %>
                  </li>
                 <% end %>
                </ul>
              </div>
              <!-- /.navbar-collapse -->
          </div>
          <!-- /.container -->
      </nav>
  </header>
  <br>
  <br>
  <div>
    <% if current_user %>
    Hello, <%= current_user.name %>!
    <% end %>
  </div>
    <%= yield %>
  </body>
</html>
