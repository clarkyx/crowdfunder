<!DOCTYPE html>
<html>
  <head>
    <title>Crowdfunder</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if current_user %>
      Signed in as <%= current_user.name %>.<%= link_to "Log Out", session_path("current"), :method => :delete, class: "logout"%>
      <% else %>
        <%= link_to "Log In", new_session_path, class: "login"%> <%= link_to "Sign Up", new_user_path, class:"signup" %>
     <% end %>

      <% if current_user %>
        <%= link_to "New Project", new_user_project_path(current_user.id)%>
      <% end %>
   </header>




    <%= yield %>
  </body>
</html>
