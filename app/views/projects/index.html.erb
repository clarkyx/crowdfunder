<% @projects.each do |project| %>
  <p class="ptitle"><%= project.title %></p>
  <p class="pdescription"><%= project.description %></p>
  <p class="pgoal"><%= project.goal %></p>
  <p class="pstardate"><%= project.startdate %></p>
  <p class="pfinishdate"><%= project.finishdate %></p>
  <strong>Project TotalPledged : <p id= "earned<%= project.id %>"><%= project.pledges.sum(:amount)  %></p></strong>
  <br>
  <% project.rewards.each do |reward| %>
  <fieldset class="reward fieldset">
    <% if current_user %>
      <button type="button" name="reward" class="<%= current_user.id %>" id= "<%= reward.id %>|<%= project.id %>">pledge <%= reward.price %></button>
    <% end %>
    <p>Description <%= reward.description %></p>
  </fieldset>
</fieldset>
  <% end %>
<% end %>
