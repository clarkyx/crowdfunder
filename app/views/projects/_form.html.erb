<%= form_for ([@user, @project]) do |f| %>
    <fieldset>
    <div class="field">
      <%= f.label :title %></br>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :description %></br>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :startdate %></br>
      <%= f.datetime_field :startdate %>
    </div>

    <div class="field">
      <%= f.label :finishdate %></br>
      <%= f.datetime_field :finishdate %>
    </div>

    <div class="field">
      <%= f.label :goal %></br>
      <%= f.number_field :goal %>
    </div>

    <div class="field">
      <%= f.label :category %></br>
      <%= f.select(:category_id) do %>
        <%= @category.each do |content| %>
          <%= content_tag(:option, content.title, value: content.id) %>
        <% end %>
      <% end %>
    </div>
    </fieldset>

    <h3>Tags</h3>
    <div id="tags">
      <%= f.fields_for :tags do |tag| %>
        <%= render 'tag_fields', :f => tag %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add tag', f, :tags %>
      </div>
    </div>

    <h3>Rewards</h3>
    <div id="rewards">
      <%= f.fields_for :rewards do |reward| %>
        <%= render 'reward_fields', :f => reward %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'add reward', f, :rewards %>
      </div>
    </div>

  </br>
  <div id="project_button">
  <%= f.submit %>
  </div>
<% end %>
